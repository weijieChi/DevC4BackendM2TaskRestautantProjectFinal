<!-- Login 6 - Bootstrap Brain Component -->
<section class="p-3 p-md-4 p-xl-5">
  <div class="container">
    <div class="alert alert-danger" role="alert">
      即將刪除帳號
    </div>
    <div class="row justify-content-center">
      <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
        <div class="card border-0 shadow rounded">
          <div class="card-body p-3 p-md-4 p-xl-5">
            <div class="row">
              <div class="col-12">
                <div class="mb-5">
                  <h3>登入</h3>
                </div>
              </div>
            </div>
            <form action="/users?_method=DELETE" class="needs-validation" method="post" novalidate>
              <div class="row gy-3 overflow-hidden">
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <input type="email" class="form-control" name="email" id="email" placeholder="請輸入 Email" required>
                    <label for="email" class="form-label">Email 信箱</label>
                    <div class="invalid-feedback">
                      請輸入格式正確的電子信箱 Email 信箱
                    </div>
                  </div>
                </div>
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <input type="password" class="form-control" name="password" id="password" value=""
                      placeholder="請輸入密碼" required>
                    <label for="password" class="form-label">密碼</label>
                    <div class="invalid-feedback">
                      請輸入密碼
                    </div>
                  </div>
                </div>
                <div class="col-12">
                  <div class="d-grid">
                    <button class="btn bsb-btn-2xl btn-danger" type="submit">刪除帳號</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="/javascripts/new.js"></script>