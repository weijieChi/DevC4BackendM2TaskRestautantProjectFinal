<div class="container shadow p-3 mb-5 bg-white rounded">
  <h2 class="d-flex justify-content-center">用戶註冊</h2>
  <p class="d-flex justify-content-center">請填寫以下註冊表單</p>
  <form action="/users/" method="post" class="row g-3 needs-validation" novalidate>
    <div class="row mb-3">
      <label for="name" class="col-sm-2 col-form-label">用戶帳號名稱 Name: </label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name" name="name" placeholder="請輸入用戶帳號名稱" required>
        <div class="invalid-feedback">
          請輸入用戶帳號名稱
        </div>
      </div>
    </div>
    <div class="row mb-3">
      <label for="email" class="col-sm-2 col-form-label">電子信箱 Email: </label>
      <div class="col-sm-10">
        <input type="email" class="form-control" id="email" name="email" placeholder="請輸入格式正確的電子信箱" required>
        <div class="invalid-feedback">
          請輸入格式正確的電子信箱
        </div>
      </div>
    </div>
    <div class="row mb-3">
      <label for="passwprd" class="col-sm-2 col-form-label">帳戶密碼 Password: </label>
      <div class="col-sm-10">
        <input type="password" class="form-control" id="password" name="password" placeholder="請輸入用戶登入密碼" required>
        <div class="invalid-feedback">
          請輸入登入用密碼
        </div>
      </div>
    </div>
    <div class="row mb-3">
      <label for="confirmPassword" class="col-sm-2 col-form-label">再確認密碼 Confirm password: </label>
      <div class="col-sm-10">
        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="請再輸入相同的密碼"
          required>
        <div class="invalid-feedback">
          請再次輸入相同密碼
        </div>
      </div>
    </div>
    <div class="row mb-3">
      <button type="submit" class="btn btn-primary">註冊</button>
    </div>
  </form>
</div>

<script src="/javascripts/registerFrontendValidation.js"></script>